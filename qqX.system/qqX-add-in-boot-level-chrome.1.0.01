function_qqX_logo() {
echColor "  _    _   \/   "
echColor " (_|  (_|  /\ "
echColor "   |.   |.    "
}


#
TITLEmain="[quickemu quickget X terminal project] - Ver: $qqX_Version "
#


function_qqX_logo_title() {

if [[ $1 ]]; then

	LogoTitle="$1"

else

	LogoTitle="$TITLEmain"

fi

echColor "  _    _   \/   "
echColor " (_|  (_|  /\ "
echColor "   |.   |.     $LogoTitle"

}





